<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ProfileActivity">

    <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_gravity="end"
            android:elevation="4dp"
            android:theme="?attr/actionBarTheme"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"/>






    <RelativeLayout
            android:id="@+id/box"
            android:layout_width="324dp"
            android:layout_height="500dp"
            android:orientation="vertical"
            android:layout_centerHorizontal="true"
            android:background="@drawable/rounded_background"
            android:elevation="8dp"
            android:padding="10dp"
            android:layout_alignParentBottom="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.494" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="124dp">

        <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_gravity="center"
                android:src="@drawable/upload_image_icon"
        />

        <TextView
                android:id="@+id/PostBy"
                android:padding="5dp"
                android:textSize="12sp"
                android:text="Post By:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image"
        />

        <TextView
                android:id="@+id/PostByDetails"
                android:padding="5dp"
                android:textSize="12sp"
                android:text="Gerard@gmail.com"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/image"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="143dp"
                android:layout_alignParentEnd="true"/>
        <TextView
                android:id="@+id/WhenQues"
                android:padding="5dp"
                android:textSize="12sp"
                android:text="When"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/PostBy"
        />
        <TextView
                android:id="@+id/DateTime"
                android:padding="5dp"
                android:textSize="12sp"
                android:text="14 January, 11:00 PM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/PostByDetails"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="137dp"
                android:layout_alignParentEnd="true"/>
        <TextView
                android:id="@+id/TitleOfDis"
                android:padding="5dp"
                android:textSize="25sp"
                android:textStyle="bold"
                android:text="Janno Party"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/DateTime"
                android:layout_marginTop="1dp"
                android:gravity="center_horizontal"
                />

        <TextView
                android:id="@+id/Description"
                android:padding="5dp"
                android:textSize="15sp"
                android:text="Janno Party is Lit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/TitleOfDis"
                android:layout_marginTop="1dp"
                android:gravity="center_horizontal"
        />
        <Button
                android:id="@+id/ShowMap"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Open Address in Maps"
                android:layout_below="@id/Description"
                />


    </RelativeLayout>

</RelativeLayout>